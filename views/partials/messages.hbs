{{#if success_messages}}
<div class="alert alert-success alert-dismissible fade show" role="alert" style="margin-top: 5px; margin-bottom: 5px;">
  {{ success_messages }}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

{{#if error_messages}}
<div class="alert alert-danger alert-dismissible fade show" role="alert" style="margin-top: 5px; margin-bottom: 5px;">
  {{ error_messages }}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}