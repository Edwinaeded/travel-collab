<header>
  <nav class="navbar navbar-expand-lg fixed-top px-4" style="background-color: #D4A373
; height: 50px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1)">
    <div class="container-fluid">
      <a class="navbar-brand" href="/trips" style="color: white; font-size: 20px; font-weight: 200; letter-spacing: 1.5px;">Travel-Collab ü™ê</a>
      {{#if user}}
      <div class="collapse navbar-collapse" id="navbarCollapse" style="d-flex align-items-center">
        <ul class="navbar-nav ms-auto mb-md-0">
          <li class="nav-item d-inline-flex align-items-center">
            <span class="text-white nav-link d-flex align-items-center" style="font-size: 18px; font-weight: 700;">Hi, {{ user.name }}
              <img src="{{ user.image }}" style="width: 40px; height: 40px; object-fit: cover; border-radius: 50%; margin-left: 10px;">
            </span>
          </li>
          <li class="nav-item d-inline-flex align-items-center">
            <a id="profile-button" class="nav-link" href="/users/{{ user.id }}" style="color: white; font-size: 15px;">| Profile <i class="fa-solid fa-user"></i></a>
          </li>
          {{#if user.isAdmin}}
          <li class="nav-item d-inline-flex align-items-center">
            <a href="/admin/users" class="nav-link" style="color: white; font-size: 15px;">| Admin <i class="fa-solid fa-screwdriver-wrench"></i></button></a>
          </li>
          {{/if}}
          <li class="nav-item d-inline-flex align-items-center">
            <form action="/logout" method="POST">
              <button class="btn btn-outline-light ms-2">Logout</button>
            </form>
          </li>
        </ul>
      </div>
      {{/if}}
    </div>
  </nav>
</header>