<h3>TRIP LIST</h3>
<a href="/trips/create" class="btn btn-lg" style="background-color: #0077b6; color: white; font-size: 18px; font-weight: 300; border-radius: 100px;">ADD <i class="fa-solid fa-circle-plus"></i> </a>
{{>messages}}
<!-- 旅程卡片區 -->
<div class="row mt-3">
  {{#each trips}}
  <div class="col-md-3 mt-3">
    <div class="card text-left">
      <div class="card-header">
        <div style="color: #8a817c; font-size: 15px; font-weight: 200;">{{this.name}}</div>
      </div>
      <div class="card-body" style="height: 80%;">
        <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" style="width: 100%; height: 180px; object-fit: cover; border-radius: 4px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
        <div class="badge bg-dark mt-2 mb-2 text-light" style="font-size: 10px;">{{formatDate this.startDate}}-{{formatDate this.endDate}}</div>
        <p class="card-text" style="font-size: 12px;">{{this.description}}</p>
        <a href="#" class="btn" style="background-color: #D4A373; color: white; font-size: 12px;">Edit</a>
      </div>
      <div class="card-footer text-muted text-center" style="font-size: 12px;">
        Last updated {{relativeTimeFromNow this.updatedAt}}
      </div>
    </div>
  </div>
  {{/each}}
</div>
