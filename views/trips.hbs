<h1>Trip list</h1>
<div class="row mt-3">
  {{#each trips}}
  <div class="col-md-4 mt-3">
    <div class="card text-left">
      <div class="card-header">
        <div style="color: #8a817c; font-size: 20px; font-weight: 200;">{{this.name}}</div>
      </div>
      <div class="card-body">
        <img class="card-img-top img-fluid" src="{{this.image}}" alt="Card image cap" width="286px" height="180px"
          style="transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
        <div class="badge bg-dark mt-2 mb-2 text-light">{{formatDate this.startDate}}-{{formatDate this.endDate}}</div>
        <p class="card-text">{{this.description}}</p>
        <a href="#" class="btn" style="background-color: #D4A373; color: white;">Edit</a>
      </div>
      <div class="card-footer text-muted text-center">
        Last updated {{relativeTimeFromNow this.updatedAt}}
      </div>
    </div>
  </div>
  {{/each}}
</div>
