<div class="container">
  <div class="row d-flex align-items-center" style="height: 530px;">
    <div class="col-md-6 d-flex align-items-center">
      <img src="/images/press-button.svg" style="width: 80%;">
    </div>
    <div class="col-md-6 d-flex flex-column align-items-center">
      <div style="width: 80%;">
        {{> messages}}
        <div class="card">
          <div class="mt-3" style="font-size: 16px; font-weight: 600;">▌登入 ✵開始你的旅程✵</div>
          <div class="card-body">
            <form action="/signin" method="POST">
              <div class="form-floating mb-3">
                <input type="text" class="form-control" id="email" name="email" placeholder="wang@example.com" required>
                <label for="email" style="font-size: 15px;">Email</label>
              </div>
              <div class="form-floating mb-3">
                <input type="password" class="form-control" id="password" name="password" placeholder="password" required>
                <label for="password" style="font-size: 15px;">Password</label>
              </div>
              <button class="btn me-2"
                style="background-color: #0077b6; color: white; font-size: 15px; font-weight: 300; border-radius: 100px;"
                type="submit">SIGN IN</button>
              <span style="font-size: 14px; font-weight: 300;">Do not have an account ? <a href="/signup">sign up</a></span>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>