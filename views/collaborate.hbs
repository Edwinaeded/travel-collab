<div class="container mb-2" style="display: flex; justify-content: space-between; align-items: center;">
  <div style="display: flex; align-items: center; font-size: 25px; font-weight: 700;">▌{{trip.name}}
    <div class="badge ms-2 text-light" style="font-size: 12px; font-weight: 300; background-color: #444444;">
      {{formatDate trip.startDate}}-{{formatDate trip.endDate}}</div>
  </div>
  <div>
    <a class="btn btn-outline-secondary" href="/trips/{{trip.id}}" style="margin-left: 5px; border-radius: 100px;"><i
        class="fa-solid fa-right-from-bracket fa-rotate-180"></i></a>
  </div>
</div>
{{#if trip.Receivers.length}}
<div class="d-flex justify-content-start mb-4 align-items-center">
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<p style="font-size: 12px;">Co-editor</p>
  {{#each trip.Receivers}}
  <img src="{{this.image}}"
    style="width: 35px; height: 35px; object-fit: cover; border-radius: 50%; margin-left: 5px;" data-bs-toggle="tooltip"
    data-bs-placement="bottom" title="{{this.name}}">
  {{/each}}
  <a href="/collaborate/edit?trip={{trip.id}}" class="ms-2 btn btn-outline-secondary" style="font-size: 12px; border-radius: 50px;"><i class="fa-solid fa-pencil"></i> Edit</a>
</div>
{{else}}
<div class="d-flex justify-content-start mb-4 align-items-center">
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
</div>
{{/if}}

<div class="container row">
  <div class="col-md-5">
    {{> messages}}
    <div>
      <form action="/collaborate" method="GET">
        <div class="mb-2">搜尋好友</div>
        <div class="d-flex align-items-center">
          <div class="form-floating me-1 flex-grow-1">
            <input type="hidden" name="trip" value="{{trip.id}}">
            <input type="text" class="form-control me-2" id="shareId" name="shareId" placeholder="shareId" required>
            <label for="shareId" style="font-size: 15px;">Share ID</label>
          </div>
          <button type="submit" class="btn btn-outline-secondary" style="border-radius: 5px; height: 55px;"><i class="fa-solid fa-magnifying-glass"></i></button>
        </div>
      </form>
    </div>
    {{#if searchUser}}
    <div class="mt-3 ms-3" style="width: 100px;">
      <img src="{{searchUser.image}}" style="width: 100px; height: 100px; object-fit: cover; border-radius: 50%;">
      <div class="mt-1" style="text-align: center; font-size: 20px; font-weight: 600;">{{searchUser.name}}</div>
      <form action="/collaborate" method="POST" style="display: flex; justify-content: center;">
        <input type="hidden" name="tripId" value="{{trip.id}}">
        <input type="hidden" name="sharedUserId" value="{{searchUser.id}}">
        <button class="btn btn-dark" style="font-size: 13px;">加入共編</button>
      </form>
    </div>
    {{/if}}
  </div>
  <div class="col-md-6" style="height: 400px; background-image: url('/images/collaborate.svg'); background-size: 80%; background-position: right bottom;
background-repeat: no-repeat;">
  </div>
</div>